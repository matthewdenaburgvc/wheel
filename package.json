{
    "name": "wheel",
    "version": "1.0.0",
    "description": "Replacement for <https://wheelofnames.com>.",
    "main": "index.js",
    "scripts": {
      "build": "npm run build:assets && npm run build:css && npm run build:ts && npm run build:index",
      "build:index": "cp -f src/layouts/index.html dist/index.html",
      "build:assets": "cp -rf src/assets dist/assets",
      "build:ts": "tsc",
      "build:css": "sass --no-source-map src/scss/main.scss dist/css/main.css",
      "build:clean": "rm -rf dist/* && touch dist/.gitkeep",
      "start": "concurrently npm:build:assets npm:build:index npm:dev:build:css npm:dev:build:ts",
      "dev:build:css": "sass --watch --no-source-map src/scss/main.scss dist/css/main.css",
      "dev:build:ts": "tsc --watch"
    },
    "repository": {
        "url": "git@github.com:matthewdenaburgvc/wheel.git",
        "type": "git"
    },
    "engines": {
        "node": "22.4.1",
        "npm": "^10.8.1"
    },
    "keywords": [],
    "author": "",
    "license": "UNLICENSED",
    "prettier": {
        "singleQuote": false,
        "printWidth": 100,
        "singleAttributePerLine": true
    },
    "devDependencies": {
        "@types/canvas-confetti": "^1.9.0",
        "@types/jquery": "^3.5.32",
        "concurrently": "^9.1.0",
        "prettier": "^3.3.3",
        "sass": "^1.81.0",
        "typescript": "^5.8.2",
        "vite": "^5.4.11",
        "vite-plugin-sass": "^0.1.0"
    },
    "dependencies": {
        "canvas-confetti": "^1.9.3",
        "jquery": "^3.7.1",
        "jquery-ui": "^1.13.3"
    }
}
